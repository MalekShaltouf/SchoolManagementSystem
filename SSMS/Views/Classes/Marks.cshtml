@using SSMS.Models
@model List<Mark>
@{
    ViewBag.Title = "StudentsClass";
}
@section LinkStyle{
    <link href="~/Content/_DisplayDataLayout.css" rel="stylesheet" />
    <link href="~/Content/TeacherClasses_Style.css" rel="stylesheet" />
}
@section StyleTag{
    .table1 th, td{
    width:165px;
    }
    .Menu ul{
    margin-top:20px;
    }
}
<div class="parent">
    <div class="Childs">
        <div class="Child1">
            <div class="welc-letter">
                <div class="Admin-Word">Student</div>
                <div>
                    <h3>welcome,</h3>
                    <span>@Session["UserName"]</span>
                </div>
            </div>
            <div class="Menu">
                <ul>
                    <li>@Html.ActionLink("Classes", "Classes", "Admin")</li>
                </ul>
            </div>
        </div>
        <div class="Child2">
            <div class="table-title">
                <h3>Student Marks</h3>
            </div>
            @if (Model.Count > 0)
            {
                <div>
                    <table class="table1">
                        <tr>
                            <th>Material Name</th>
                            <th>Mark</th>
                            
                        </tr>
                        @{
                            List<Material> studentMaterials = ViewBag.StudentMaterials;

                            for (int i = 0; i < studentMaterials.Count; i++)
                            {
                                for (int j = 0; j < Model.Count; j++)
                                {
                                    if (i == j)
                                    {
                                        <tr>
                                            <td>@studentMaterials[i].MaterialNameInEnglish</td>
                                            <td>@Model[j].Mark1</td>
                                        </tr>
                                    }
                                }
                            }
                        }
                    </table>
                </div>
            }
            else
            {
                <div class="Data-Not-Found">There is no data to display</div>
            }
        </div>
    </div>
</div>




