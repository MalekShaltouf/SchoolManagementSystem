@model List<SSMS.Models.User>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_DisplayDataLayout.cshtml";
}
@section ListLink{
<li>@Html.ActionLink("Add Users", "AddUser", "Admin")</li>
    
}
@section Title {
    Users Information
}
<tr>
    <th>UserId</th>
    <th>FName</th>
    <th>UName</th>
    <th>Password</th>
    <th>UserType</th>
    <th>Updates</th>
    <th>Deletes</th>
</tr>
@foreach (var user in Model)
{
    <tr>
        <td>@user.UserId</td>
        <td>@user.FullName</td>
        <td>@user.UserName</td>
        <td>@user.Password</td>
        <td>@user.UserType</td>
        <td>@Html.ActionLink("Update", "UpdateUser", new { id = user.UserId })</td>
        <td><button onclick="location.href='@Url.Action("DeleteUser", "Admin", new { id = user.UserId })'">Delete</button></td>
    </tr>
}















