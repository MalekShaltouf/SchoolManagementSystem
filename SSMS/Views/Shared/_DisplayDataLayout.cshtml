@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section LinkStyle
    {
    <link rel="stylesheet" href="~/Content/_DisplayDataLayout.css" />
    @RenderSection("LinkStyle2",false)
}
<div class="parent">
    <div class="Childs">
        <div class="Child1">
            <div class="welc-letter">
                <div class="Admin-Word">Admin</div>
                <div>
                    <h3>welcome,</h3>
                    <span>@Session["UserName"]</span>
                </div>
            </div>
            <div class="Menu">
                <ul>
                    @RenderSection("ListLink", false)
                    <li>@Html.ActionLink("Users", "index", "Admin")</li>
                    <li>@Html.ActionLink("Classes", "Classes", "Admin")</li>
                    <li>@Html.ActionLink("Materials", "Materials", "Admin")</li>
                    <li>@Html.ActionLink("Teachers", "Teachers", "Admin")</li>
                    <li>@Html.ActionLink("Students", "Students", "Admin")</li>
                </ul>
            </div>
        </div>
        <div class="Child2">
            <div class="table-title">
                <h3>@RenderSection("Title", false)</h3>
            </div>
            @if (Model.Count > 0)
            {
                <div>
                    <table class="table1">
                        @RenderBody()
                    </table>
                </div>
            }
            else
            {
                <div class="Data-Not-Found">There is no data to display</div>
            }
        </div>
    </div>
</div>


